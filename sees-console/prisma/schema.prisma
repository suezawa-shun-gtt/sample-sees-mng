generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Sees {
  targetDomain      String     @unique @map("target_domain")
  redirectUrl       String     @map("redirect_url")
  previewUrl        String?    @map("preview_url")
  templateVariables Json       @map("template_variables")
  createdAt         DateTime   @default(now()) @map("created_at")
  updatedAt         DateTime   @updatedAt @map("updated_at")
  note              String?
  title             String
  id                Int        @id @default(autoincrement())
  azureStaticAppName String?   @map("azure_static_app_name") // Azure Static Web App名
  azureDnsZoneName  String?    @map("azure_dns_zone_name")    // Azure DNSゾーン名
  nsRecords         NsRecord[]

  @@map("sees")
}

model NsRecord {
  id         String   @id @default(uuid())
  nameServer String   @map("name_server")
  createdAt  DateTime @default(now()) @map("created_at")
  seesId     Int      @map("sees_id")
  sees       Sees     @relation(fields: [seesId], references: [id], onDelete: Cascade)

  @@map("ns_records")
}
